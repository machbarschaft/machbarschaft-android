<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/order_background"
    tools:context="jetzt.machbarschaft.android.view.order.OrderAcceptActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/screen_padding"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/order_accept_title"
            android:paddingTop="40dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/splash_text_header"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_accept_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textColor="@color/splash_text_header"
            android:fontFamily="@font/lato_bold"
            android:paddingBottom="30dp"
            android:text="@string/order_accept_text"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/order_accept_iV_step1"
            android:background="@drawable/round_outline"
            android:layout_width="300dp"
            android:paddingStart="70dp"
            android:paddingTop="40dp"
            android:layout_gravity="center"
            android:layout_height="300dp"
            app:srcCompat="@drawable/graphic_splash_screen" />

        <Button
            android:id="@+id/btn_call"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginTop="16dp"
            android:text="@string/call_now" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>