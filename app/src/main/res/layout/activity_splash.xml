<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    android:fitsSystemWindows="true"
    tools:context="jetzt.machbarschaft.android.view.splash.Splash">

    <TextView
        android:id="@+id/splash_tV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/app_name_noncapital"
        android:textColor="@color/splash_text_header"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/virvswirus_logo"
        android:layout_width="189dp"
        android:layout_height="66dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/wirvsvirus_project_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/splash_tV_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/splash_text_describtion"
        android:textSize="18sp"
        android:text="@string/splash_describtion"
        app:layout_constraintStart_toStartOf="@+id/splash_tV_title"
        app:layout_constraintTop_toBottomOf="@+id/splash_tV_title" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/graphic_splash_screen" />

</androidx.constraintlayout.widget.ConstraintLayout>